            </StackPanel>
        </ListView>
        <ListView Background="Black" Name="ListFood" Grid.Column="4" Grid.Row="2" Grid.ColumnSpan="4" Grid.RowSpan="8" ScrollViewer.VerticalScrollBarVisibility="Hidden">
            <StackPanel>
                <Image Source="/DrinkImg/1.jpg" Width="120"/>
                <TextBlock Text="Добрый кола 1л | 90р" Background="AliceBlue"/>
            </StackPanel>
            <StackPanel>
                <Image Source="/DrinkImg/2.jpg" Width="120"/>
