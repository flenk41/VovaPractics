            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <TextBlock  Text="Food" FontSize="30" Grid.Column="1" Grid.ColumnSpan="2" HorizontalAlignment="Center" Margin="5,5,5,5"/>
        <Rectangle Grid.Row="1" Fill="#cf2f44" Height="15" VerticalAlignment="Top" Grid.ColumnSpan="8"/>
        <ListView Background="Black" Name="ListProduction" Grid.Row="2" Grid.ColumnSpan="4" Grid.RowSpan="8" ScrollViewer.VerticalScrollBarVisibility="Hidden">
