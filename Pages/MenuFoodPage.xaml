            <StackPanel>
                <Image Source="/ImgFood/2.jpg" Width="120" />
                <TextBlock Text="Пица | 550р" Background="AliceBlue"/>
            </StackPanel>
            <StackPanel>
                <Image Source="/ImgFood/3.jpg" Width="120" />
